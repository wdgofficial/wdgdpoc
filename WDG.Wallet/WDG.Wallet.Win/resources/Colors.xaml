<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="MainBackgroundColor" Color="#F4F6F9"/>
    <SolidColorBrush x:Key="WarmmingColor" Color="#FFF2D19A"/>
    <SolidColorBrush x:Key="BorderColor" Color="Gray"/>
    <SolidColorBrush x:Key="PopupBackColor" Color="Gray" Opacity="0.3"/>

    <FontFamily x:Key="GlobalFontFamily">PingFangSC-Regular</FontFamily>
    <sys:Int32 x:Key="GlobalFontSize">14</sys:Int32>

    <SolidColorBrush x:Key="btn_enable_ContentColor" Color="#FFFFFF" Opacity="0.3"/>
    <SolidColorBrush x:Key="btn_normal_ContentColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="btn_mouseOver_ContentColor" Color="#FFFFFF" Opacity="0.8"/>

    <SolidColorBrush x:Key="btn_white_enable_ContentColor" Color="#8C8C8C" Opacity="0.3"/>
    <SolidColorBrush x:Key="btn_white_normal_ContentColor" Color="#8C8C8C"/>
    <SolidColorBrush x:Key="btn_white_mouseOver_ContentColor" Color="#8C8C8C" Opacity="0.8"/>


</ResourceDictionary>