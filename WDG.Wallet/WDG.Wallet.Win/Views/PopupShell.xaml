<Page x:Class="WDG.Wallet.Win.Views.PopupShell"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WDG.Wallet.Win.Views"
      xmlns:vm="clr-namespace:WDG.Wallet.Win.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PopupShell">
    <Page.DataContext>
        <vm:PopupShellViewModel/>
    </Page.DataContext>
    <Grid Background="{StaticResource PopupBackColor}">
        <Frame Width="Auto" Height="Auto"
               VerticalAlignment="Center" HorizontalAlignment="Center" 
               Content="{Binding PopupShellView}"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
